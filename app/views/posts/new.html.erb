<h1>New post</h1>

<%= form_for(@post, url: new_post_path) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label :title %><br>
<%= f.text_field :title %><br>

<%= f.label :body %><br>
<%= f.text_area :body, placeholder: "Compose new post..."  %><br>

<%= f.submit "Create new post" %>
<% end %>